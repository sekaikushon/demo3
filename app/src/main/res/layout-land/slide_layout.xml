<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/slide_images"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/lv1">

    </androidx.appcompat.widget.AppCompatImageView>


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="0dp"
        android:background="#f1f1f1">
        <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text1"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:text="Pruduct"/>

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_favorite_red_a400_36dp"/>


    </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:src="@drawable/look1_shirts"
                android:background="#ffffff"
                android:layout_marginHorizontal="1dp"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:id="@+id/number1"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="#ffffff"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:text="5"/>


        </TableRow>
    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/image2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:src="@drawable/look1_skirt"
            android:background="#ffffff"
            android:layout_marginHorizontal="1dp"
            android:layout_marginBottom="1dp"/>

        <TextView
            android:id="@+id/number2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="#ffffff"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:text="0"/>


    </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/image3"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:src="@drawable/look1_globe"
                android:background="#ffffff"
                android:layout_marginHorizontal="1dp"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:id="@+id/number3"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="#ffffff"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:text="2"/>


        </TableRow>
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/image4"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:src="@drawable/look1_bag"
                android:background="#ffffff"
